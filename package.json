{
	"name": "queryforce",
	"displayName": "queryforce",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:queryforce.editor.open",
		"onView:queryforce-explorer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"title": "Queryforce",
					"id": "queryforce",
					"icon": "media/outline_storage_black_36dp.png"
				}
			]
		},
		"views": {
			"queryforce": [
				{
					"name": "Queryforce Explorer",
					"id": "queryforce-explorer"
				}
			]
		},
		"commands": [
			{
				"command": "queryforce.editor.open",
				"title": "QF: Open SOQL Editor"
			},
			{
				"command": "queryforce.connection.add",
				"title": "QF: Add New Connection"
			},
			{
				"command": "queryforce.connection.default",
				"title": "Set as default org"

			},
			{
				"command": "queryforce.connection.retrieve.soql",
				"title": "QF: Run SOQL"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "queryforce.connection.add",
					"when": "view == queryforce-explorer"
				}
			],
			"view/item/context": [
				{
					"command": "queryforce.connection.default",
					"when": "view == queryforce-explorer"
				}
			],
			"editor/context": [
				{
					"command": "queryforce.connection.retrieve.soql"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.37.0",
		"glob": "^7.1.4",
		"mocha": "^10.2.0",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.2"
	},
	"dependencies": {
		"fs-extra": "^8.1.0",
		"jsforce": "^1.9.2"
	}
}
